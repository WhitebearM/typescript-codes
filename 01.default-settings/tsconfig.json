{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build/js",
        "target": "ES6",
        "noEmitOnError": true,
        "module": "ESNext", //컴파일을 마친 후에 Js허용하는 모듈
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "lib": ["ESNext",  "DOM"],
        "strict": true

    },
    "include": [
        "./src/**/*.ts"
    ]
}